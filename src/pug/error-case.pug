extends _layouts/default

block vars
    -title        = 'Karo | Trứng tươi - chà bông'
    -description  = ''
    -keywords     = ''
    -pageID       = 'top'
    -path         = '.'
block container
    
    .keyvisual
        .container.d-flex.flex-column.justify-content-center.align-items-center.h-100
            p.text-center
                img(class="max-w-100" src="./img/trung_xe_o_to.png" alt="Trúng xe ô tô" width="757")
            p.text-center
                a.d-inline-block.trans(href="#") 
                    img(class="tham_gia_quay_thuong max-w-100" src="./img/tham_gia_quay_thuong.png" alt="Tham gia quay thưởng" width="320")
            .clearfix
                .content
                    p.card-content
                        img(class="max-w-100" src="./img/oto_02.png" alt="Trúng xe ô tô" width="757")
                    .row.align-items-center.position-relative.z-index-10.pb-3
                        .col
                            p.deco01
                                img(class="tren_10_ty_dong max-w-100" src="./img/tren_10_ty_dong.png" alt="Trên 10 tỷ đồng" width="273")
                        .col
                            p.deco02
                                img(class="max-w-100" src="./img/deco_02.png" alt="Trên 10 tỷ đồng" width="380")
                    
        .footer.d-none.d-sm-block
            .container
                .row.align-items-center.justify-content-between
                    .col-auto
                        p.mb-0 Thời gian áp dụng từ 25/3/2022 - 25/5/2022 trên toàn quốc    
                    .col-auto    
                        p.mb-0 HOTLINE 19003389
    
    .section.vong-quay
        .container.d-flex.flex-column.justify-content-center.align-items-center.h-100
            .content.bg-white.rounded.p-4.position-relative
                .row.h-100
                    .col-12.col-lg-6.my-2
                        .clearfix
                            .quay-thuong
                                p.m-0
                                    img(class="max-w-100" src="./img/vong_xoay.png", alt="quay thưởng" width="560")
                    .col-12.col-lg-6.my-2
                        .form-primary
                            p.title.mb-2 Vui lòng điền đầy đủ thông tin để được tham gia quay thưởng
                            form
                                .mb-2
                                    label.form-label(for='code') Mã dự thưởng trên thẻ cào
                                    input#code.form-control.is-invalid(type='text' value="AXIS-XOAH-JLGFN-XMSL")
                                    .invalid-feedback.text-right
                                        | Mã dự thưởng không hợp lệ
                                .mb-2
                                    label.form-label(for='fullname') Họ và tên
                                    input#fullname.form-control(type='text' value="Nguyễn Văn A")
                                .mb-2
                                    label.form-label(for='phone') Số điện thoại
                                    input#phone.form-control(type='text' value="03822222222")
                                .mb-2
                                    label.form-label(for='address') Địa chỉ
                                    input#address.form-control(type='text' value="123 Đường Lý Thường Kiệt")
                                .mb-2
                                    label.form-label(for='province') Tỉnh/Thành Phố
                                    select#province.form-select
                                        option() Chọn tỉnh/thành phố
                                        option(value='1' selected='') TP. Hồ Chí Minh
                                        option(value='2') Two
                                        option(value='3') Three
                                .mb-2
                                    label.form-label(for='district') Quận/Huyện
                                    select#district.form-select
                                        option() Chọn quận/huyện
                                        option(value='1' selected='') Quận 10
                                        option(value='2') Two
                                        option(value='3') Three
                                
                                p.text-center.mt-4.mb-0
                                    a.trans.d-inline-block(href='#')
                                        img(src="./img/dang_quay.png" alt="quay thưởng" width="160")


    .chatbot
        p.mb-0
            a.d-inline-block.trans(href="#")
                img(src="./img/chat.png" alt="Chat")

block script
        