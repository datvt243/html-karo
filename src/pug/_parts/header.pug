header.header-container
    nav.navbar.navbar-expand-lg.navbar-white.bg-transparent
        .container-xxl.align-items-lg-start
            
            a.navbar-brand(href=path+'/')
                span.logo.d-inline-block
                    img(src="./img/karo.png" alt="logo" height="130")
            
            .clearfix.d-flex.align-items-center
                .d-block.d-lg-none.pe-3
                    span.nav-tel.d-flex.align-items-center
                        span.ico
                            img(src="./img/icon/tel.png")
                        span.number.ps-2 19003389
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarmenu' aria-controls='navbarmenu' aria-expanded='false' aria-label='Toggle navigation')
                    span
                        img(src="./img/bars.png" alt="icon")
            #navbarmenu.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link.trans(href="./")
                            | trang chủ
                    li.nav-item
                        a.nav-link.trans(href="./rules_v2.html")
                            | thể lệ
                    li.nav-item
                        .dropdown
                            a.nav-link.trans#shopOnline(data-bs-toggle='dropdown' aria-expanded='false')
                                | mua hàng trực tuyến
                                span.ico 
                                    img(src="./img/icon/arrow-down.png" alt="icon")
                            .dropdown-menu.dropdown-menu-end(aria-labelledby='shopOnline')
                                ul.row.list-style-none
                                    -
                                        var list_menu = ['zalo', 'shopee', 'tiki', 'lazada', 'richy']
                                    each menu in list_menu
                                        li.col-6.col-lg-12.py-1
                                            a.dropdown-item(href='#')
                                                span.d-flex.align-items-center
                                                    span.ico
                                                        img(src="./img/icon/"+menu+".png" alt=menu)
                                                    span.text.text-capitalize.ps-2= menu
                    li.nav-item.d-none.d-lg-block
                        span.nav-link
                            span.nav-tel.d-flex.align-items-center
                                span.ico
                                    img(src="./img/icon/tel.png")
                                span.number.ps-2 19003389
            
            .clearfix.d-none.d-lg-block
                p.mb-0
                    img(src="./img/richy_20.png" alt="richy 20" width="138")
    